<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example1.practice1.mapper.ProductMapper">

	<select id="productCount" resultType="int">
	SELECT	COUNT(*)
	FROM	PRODUCTTABLE
	</select>

	<insert id="productInsert" parameterType="com.example1.practice1.domain.ProductDTO" useGeneratedKeys="true" keyProperty="productno">
	INSERT	INTO	PRODUCTTABLE
			(PRODUCTNO, PRODUCTIMAGEFILE, productimageName, productimageOriName, productimageUrl, PRODUCTNAME, 	PRODUCTPRICE, PRODUCTSALESCNT)
	VALUES	(#{productno},#{productimagefile}, #{productimageName}, #{productimageOriName}, #{productimageUrl}, #{productname},#{productprice}, #{productsalescnt})
	</insert>                
<!-- 
	<insert id="fileInsert" parameterType="com.edu.Product.domain.FileDTO">
	INSERT	INTO	FILES
			(FNO,		BNO,	FILENAME,		FILEORINAME,	FILEURL)
	VALUES	(#{fno},	#{bno},	#{fileName},	#{fileOriName},	#{fileUrl})
	</insert>
-->
	<!-- 게시글 목록 보기 -->
	<select id="productList" resultType="com.example1.practice1.domain.ProductDTO">
	SELECT	
		PRODUCTNO, PRODUCTIMAGEFILE, PRODUCTNAME, PRODUCTPRICE, PRODUCTSALESCNT
	FROM
			PRODUCTTABLE	
	order by PRODUCTNO desc		
	</select>
	
	<select id="getproductListCnt" resultType="int">
		SELECT
			count(*) as listCut
		FROM
			PRODUCTTABLE
	</select>

	<!-- 게시글 번호에 해당하는 자료를 추출한다. -->
	<select id="productDetail" parameterType="int" resultType="com.example1.practice1.domain.ProductDTO">
	SELECT	*
	FROM	PRODUCTTABLE
	WHERE	PRODUCTNO		= #{productno}
	</select>
	
	<!-- bno에 해당하는 게시글의 정보를 수정한다. 
	<update id="productUpdate" parameterType="com.example1.practice1.domain.ProductDTO">
	UPDATE	PRODUCTTABLE
	SET		<if test="subject != null and subject !=''">SUBJECT = #{subject}</if>
			<if test="subject != null and subject !='' and content != null and content !=''"> , </if>
			<if test="content != null and content !=''">CONTENT = #{content}</if>
	WHERE	BNO		= #{bno}
	</update>
	-->
	
	<!-- bno에 해당하는 자료를 삭제한다. 
	<delete id="productDelete" parameterType="int" >
	DELETE
	FROM	PRODUCTTABLE
	WHERE	BNO		= #{bno}
	</delete>
	 
	<select id="fileDetail" parameterType="int" resultType="com.edu.board.domain.FileDTO">
	SELECT	*
	FROM	FILES
	WHERE	BNO		= #{bno}
	</select>
	
	-->
</mapper>